<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="7"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnListado"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:background="@android:drawable/ic_media_rew"
            android:layout_height="wrap_content" />
        <RatingBar
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="0dp">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="AQUI SE VISUALIZARA EL NOMBRE DE LA MUSICA"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/repeat"
                android:layout_width="wrap_content"
                android:background="@android:drawable/ic_menu_directions"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:layout_height="fill_parent" />
            <Button
                android:id="@+id/anterior"
                android:layout_width="wrap_content"
                android:background="@android:drawable/ic_media_rew"
                android:layout_toRightOf="@+id/repeat"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/anterior"
                android:layout_weight="1"
                android:background="@android:drawable/ic_media_play"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/siguiente"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/play"
                android:layout_weight="1"
                android:background="@android:drawable/ic_media_ff"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/aleatorio"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/siguiente"
                android:background="@android:drawable/ic_media_pause"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>