<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="10"
    android:background="@drawable/fondo7"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnListado"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:background="@android:drawable/ic_media_rew"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/ic_info_outline_black_24dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="0dp">
        <SeekBar
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:background="@mipmap/ic_menu_black_24dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/anterior"
                android:layout_width="wrap_content"
                android:background="@mipmap/ic_skip_previous_black_24dp"
                android:layout_toRightOf="@+id/repeat"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/anterior"
                android:layout_weight="1"
                android:gravity="end"
                android:background="@mipmap/ic_play_circle_outline_black_24dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/siguiente"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/play"
                android:layout_weight="1"
                android:gravity="end"
                android:background="@mipmap/ic_skip_next_black_24dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/aleatorio"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/siguiente"
                android:gravity="end"
                android:background="@mipmap/ic_shuffle_black_24dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvNombre"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:text="AQUI SE VISUALIZARA EL NOMBRE DE LA MUSICA"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>